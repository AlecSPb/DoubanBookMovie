<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_avatar"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:background="@color/md_grey_300"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/rl_buttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_avatar"
        android:layout_alignEnd="@+id/img_avatar"
        android:layout_alignLeft="@+id/img_avatar"
        android:layout_alignRight="@+id/img_avatar"
        android:layout_alignStart="@+id/img_avatar"
        android:background="@color/mainTabIndicatorColor"
        android:padding="6dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/md_white_100"
            android:textSize="12sp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:isIndicator="true"
            android:maxHeight="14dp"
            android:maxWidth="14dp"
            android:minHeight="14dp"
            android:numStars="5"
            android:progressDrawable="@drawable/progress_drawable"
            android:stepSize="0.1"/>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_below="@+id/tv_title"
            android:layout_toEndOf="@+id/ratingBar"
            android:layout_toRightOf="@+id/ratingBar"
            android:gravity="top"
            android:lineSpacingExtra="0px"
            android:paddingTop="0px"
            android:text="2.3"
            android:textColor="@color/md_white_100"
            android:textSize="10dp"/>
    </RelativeLayout>

</RelativeLayout>